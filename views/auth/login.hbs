<div class="body-padding">
  <div class="titles">
    <p>Log In</p>
  </div>

  <div class="body">

     <div class="subtitles">
      <p>
        <b>Introduce tu correo y contraseña para entrar.</b>
      </p>
    </div>

    <form
      class="row gy-2 gx-3 align-items-center"
      action="/auth/login"
      method="POST"
    >
      <div class="col-sm-5">
        <label for="exampleInputEmail1" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          class="form-control"
          aria-describedby="emailHelp"
        />
      </div>

      <div class="col-sm-5">
        <label for="exampleInputPassword1" class="form-label">Contraseña</label>
        <input type="password" name="password" class="form-control" />
      </div>

      <div class="col-12">
        <button type="submit" class="btn btn-bd-third">Entrar</button>
      </div>
    </form>
  </div>

  {{#if errorMessage}}
    {{errorMessage}}
  {{/if}}

</div>

