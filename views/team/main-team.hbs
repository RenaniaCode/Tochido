<div class="body-padding">

  <div class="titles">
    <p>Mi Perfil</p>
  </div>

  <div class="row gy-2 gx-3 align-items-center">

    <div class="col-sm-5">
      <p>
        <b>Nombre: </b><span>{{user.name}}</span><br />
        <b>Apellido: </b><span>{{user.surname}}</span><br />
      </p>
    </div>
    <div class="col-sm-5">
      <img
        src="/images/Screen Shot 2022-07-08 at 19.09.39.png"
        class="float-end circle-image"
        alt="..."
        width="200"
        height="200"
      />
    </div>

    <div class="row">
      <div class="col"></div>
      <div class="col"></div>
    </div>
  </div>

  <div class="titles">
    <p>Perfil de mi Equipo</p>
  </div>

  <div class="row gy-2 gx-3 align-items-center">

    <div class="col-sm-5">
      <p>
        <b>Nombre del Equipo: </b><span>{{coach.team_name}}</span><br />
        <b>Cantidad de Jugadores: </b><span>{{numPlayers}}</span><br />
        <b>ID: </b><span>{{coach._id}}</span><br />
      </p>
    </div>
    <div class="col-sm-5">
      <img
        src="/images/Screen Shot 2022-07-08 at 19.09.39.png"
        class="float-end circle-image"
        alt="..."
        width="200"
        height="200"
      />
    </div>

    <div class="container">
      <div class="row">
        <div class="col"></div>
        <div class="col col-lg-2">
          <a
            type="button"
            class="btn btn-bd-fourth float-end"
            href="/team/mainTeam/{{id}}/add-players"
          >Jugadores</a>
        </div>
        <div class="col col-lg-2">
          <a
            type="button"
            class="btn btn-bd-fourth float-end"
            href="/team/edit-team/{{id}}"
          >Editar Perfiles</a>
        </div>
         <div class="col col-lg-2">
          <a
            type="button"
            class="btn btn-bd-fourth float-end"
            href="/team/mainTeam/{{id}}/lineup"
          >Alineaciones</a>
        </div>
        <div class="col"></div>
      </div>
    </div>
  </div>

  <div class="titles" id="Results">
    <p>Tabla de Resultados {{league.league_name}}</p>
  </div>

  <table
    class="table table-striped table-borderless table-color-bg"
    style="background-color: #CDCDCD;"
  >
    <thead>
      <tr>
        <th scope="col">Position</th>
        <th scope="col"></th>
        <th scope="col">Equipo</th>
        <th scope="col">Puntos</th>
        <th scope="col">JJ</th>
        <th scope="col">JG</th>
        <th scope="col">JP</th>
        <th scope="col">JE</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      {{#each sorted}}
        <tr>
          <th scope="row">{{@key}}</th>
          <td><img
              src="/images/Screen Shot 2022-07-08 at 19.09.39.png"
              alt="..."
              style="border-radius:20px;"
              width="30"
              height="30"
            /></td>
          <td>{{this.team_name}}</td>
          <td>{{this.points}}</td>
          <td>{{this.gamesPlayed}}</td>
          <td>{{this.wins}}</td>
          <td>{{this.defeats}}</td>
          <td>{{this.draws}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

  <div class="titles" id="Calendar">
    <p>Calendario de Partidos</p>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4" style="color: white;">
    {{#each league._matches}}
    <div class="col">
      <div
        class="card h-100 text-center border-light"
        style=" background-color: #DEB5EE"
      >
        <div class="card-img-container">
          <img
            src="/images/Screen Shot 2022-07-08 at 19.09.39.png"
            class="card-img-team"
            alt="..."
          />

          <span>vs</span>
          <img
            src="/images/Screen Shot 2022-07-08 at 19.09.39.png"
            class="card-img-team"
            alt="..."
          />

        </div>

        <div class="card-body">
          <h5 class="card-title">{{this.date}}</h5>
          <p class="card-text">{{this.hour}} hrs</p>
          <p class="card-text">week {{this.week}}</p>
        </div>
      </div>
    </div>
     {{/each}}
  </div>
<br><br><br><br>
<div
  class="gallery js-flickity"
  data-flickity-options='{ "wrapAround": true }'
  id="Announcements"
>
{{#each league._warning}}
  <div class="gallery-cell">
    <div class="gallery-text">
      <div class="titles-grey">
        <p>{{this.header}}</p>
      </div>
      <p>{{this.text}}</p>
      <a type="button" class="btn btn-bd-fourth" href="#">Leer más</a>
    </div>
  </div>
{{/each}}
</div>

