<br><br><br>
<h1>Crear Encuentro</h1>

<form action="/league/match/{{id}}" method="post">
    <label for="teamLocal">Local</label>
    <select name="teamLocal" id="local">
        {{#each league.0._teams}}
        <option value="{{this._id}}">{{this.team_name}}</option>
        {{/each}}
    </select>

    <label for="scoreLocal">Puntos Local</label>
    <input type="number" name="scoreLocal">
<br><br>
    <label for="teamVisitor">Visitante</label>
    <select name="teamVisitor" id="visitor">
        {{#each league.0._teams}}
        <option value="{{this._id}}">{{this.team_name}}</option>
        {{/each}}
    </select>

    <label for="scoreVisitor">Puntos Visitante</label>
    <input type="number" name="scoreVisitor">
<br><br>
    <label for="date">Fecha</label>
    <input type="date" name="date">
<br><br>
    <label for="hour">Hora</label>
    <input type="number" name="hour">
<br><br>
    <label for="week">Semana</label>
    <select name="week" id="week">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
        <option value="11">11</option>
        <option value="12">12</option>
        <option value="13">13</option>
        <option value="14">14</option>
        <option value="15">15</option>
        <option value="16">16</option>
        <option value="17">17</option>
        <option value="Cuartos de Final">Cuartos de Final</option>
        <option value="Semifinal">Semifinal</option>
        <option value="Final">Final</option>
    </select>

    <div class="col-12">
        <button type="submit" class="btn btn-bd-third">Crear</button>
    </div>
</form>